{
  "name": "Proton",
  "version": "1.0.0",
  "description": "Template for vanilla projects (no framework)",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prebuild": "rm -rf ./docs",
    "start": "parcel src/index.html src/en/index.html src/uk/index.html src/privacy-policy/en/index.html src/privacy-policy/uk/index.html --open",
    "build": "parcel build src/index.html src/en/index.html src/uk/index.html src/privacy-policy/en/index.html src/privacy-policy/uk/index.html --dist-dir docs --public-url ./",
    "lint-js": "eslint ./src",
    "lint-js:fix": "eslint ./src --fix",
    "lint-styles": "stylelint **/*.css **/*.scss",
    "lint-styles:fix": "stylelint --fix **/*.css **/*.scss",
    "lint": "concurrently \"npm:lint-js\" \"npm:lint-styles\"",
    "lint:fix": "concurrently \"npm:lint-js:fix\" \"npm:lint-styles:fix\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Frant22/vanilla-template.git"
  },
  "keywords": [
    "template",
    "html",
    "css",
    "javascript",
    "eslint"
  ],
  "author": "Frant22",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Frant22/vanilla-template/issues"
  },
  "homepage": "https://github.com/Frant22/vanilla-template#readme",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.16.3",
    "bootstrap": "^5.3.8",
    "concurrently": "^6.0.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^6.0.0",
    "parcel": "^2.16.3",
    "sass": "^1.93.2",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap-icons": "^1.13.1",
    "flag-icons": "^7.5.0"
  }
}
